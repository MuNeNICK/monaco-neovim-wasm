{
  "name": "monaco-neovim-wasm-workspace",
  "version": "0.1.20",
  "private": true,
  "type": "module",
  "description": "Workspace for @monaco-neovim-wasm/* packages.",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:assets": "bash ./scripts/build-nvim-assets.sh",
    "build": "npm -w @monaco-neovim-wasm/lib run build",
    "build:all": "npm run build:assets && npm run build",
    "typecheck": "npm -w @monaco-neovim-wasm/lib run typecheck",
    "build:types": "npm -w @monaco-neovim-wasm/lib run build:types",
    "demo:dev": "npm run build && npm --prefix demo run dev",
    "test:e2e": "npm run build && npm --prefix e2e/app ci && playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "monaco-editor": "^0.55.1",
    "typescript": "^5.4.0",
    "vite": "^7.3.0"
  }
}
