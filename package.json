{
  "name": "monaco-neovim-wasm",
  "version": "0.1.4",
  "private": false,
  "type": "module",
  "description": "Run real Neovim (WASM) inside Monaco Editor, inspired by monaco-vim but backed by native Neovim RPC.",
  "scripts": {
    "build": "vite build && vite build -c vite.worker.config.ts && npm run build:types",
    "typecheck": "tsc --noEmit",
    "build:types": "tsc -p tsconfig.build.json",
    "build:assets": "bash ./scripts/build-nvim-assets.sh"
  },
  "dependencies": {
    "@bjorn3/browser_wasi_shim": "^0.4.2",
    "fflate": "^0.8.2"
  },
  "peerDependencies": {
    "monaco-editor": "^0.44.0"
  },
  "devDependencies": {
    "monaco-editor": "^0.44.0",
    "typescript": "^5.4.0",
    "vite": "^5.2.0"
  },
  "main": "./dist/monaco-neovim-wasm.es.js",
  "module": "./dist/monaco-neovim-wasm.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/monaco-neovim-wasm.es.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "package.json"
  ]
}
